#! /usr/bin/env bash
set -o errexit
set -o nounset
set -o pipefail

curr=($(head -n 1 /etc/resolv.conf))
name="${curr[1]}"

if [[ ${name} == "normal" ]]; then
    echo "Setting mullvad dns..."
    sudo mv /etc/resolv.conf /etc/resolv.conf.normal
    sudo mv /etc/resolv.conf.mullvad /etc/resolv.conf
else
    echo "Setting normal dns..."
    sudo mv /etc/resolv.conf /etc/resolv.conf.mullvad
    sudo mv /etc/resolv.conf.normal /etc/resolv.conf
fi

