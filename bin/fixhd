#!/usr/bin/env bash

set -o nounset
set -o pipefail

connected() {
    status="$(echo 'info 70:26:05:0D:3E:C3' | bluetoothctl | rg Connected | cut -f 2 -d ' ')"
    if [ $status = 'no' ]; then
        return 1
    else
        return 0
    fi
}

bt_cmd() {
    echo "$1" | bluetoothctl
}

if connected; then
    bt_cmd 'disconnect 70:26:05:0D:3E:C3'
    while connected; do
        sleep 0.2
    done
    sleep 2
fi

sudo systemctl stop bluetooth.service
sudo rmmod btusb
sudo modprobe btusb
sudo systemctl start bluetooth.service
sleep 2
bt_cmd 'default-agent'
bt_cmd 'power on'
bt_cmd 'connect 70:26:05:0D:3E:C3'

while ! connected; do
    sleep 0.2
done
sleep 2
