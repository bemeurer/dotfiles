#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

slurp=/home/bemeurer/bin/slurp
grim=/home/bemeurer/bin/grim

if [ $(pgrep -x i3) ]; then
    scrot -s /tmp/screenshot-$(date +%F_%T).png -e 'xclip -selection c -t image/png < $f'
elif [ $(pgrep -x sway) ]; then
    $grim  -g "$($slurp)" - | wl-copy
else
    gnome-screenshot -c -a
fi
